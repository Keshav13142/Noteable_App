<%- include("header",title) %>

    <body>

        <%- include("navbar",loggedIn) %>
            <div class="container d-flex align-items-center flex-column gap-5 justify-content-center mt-2 ">
                <h2>Create your account</h2>
                <div class="card  text-bg-dark p-4 w-auto">
                    <form action="register" method="post">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" name="name">
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" class="form-control" id="email" name="email">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password">
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Register</button>
                        </div>
                        <p class="mt-3">Already have an account? Login <a href="login">here</a></p>
                    </form>
                </div>
            </div>
            <div class="toast-container position-fixed top-0 end-0 p-3">
                <div id="error" class="toast" role="alert" style="background-color: rgb(232, 159, 159);">
                    <div class="toast-header" style=" color: white;background-color: rgb(161, 63, 63);">
                        <strong class="me-auto">Email already exists!!</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
                    </div>
                    <div class="toast-body">
                        Please try loggin in if you already have an account!!
                    </div>
                </div>
            </div>
            <div style="display: none;" id="condition">
                <%= error %>
            </div>
            <script>
                const errorPopup = document.getElementById('error')
                const condition = document.getElementById("condition").innerHTML.trim();
                if (condition == "true") {
                    const toast = new bootstrap.Toast(errorPopup)
                    toast.show()
                }
            </script>
    </body>