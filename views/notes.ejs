<%- include("header",{title:"My Notes"}) %>
    <style>
        .note {
            width: fit-content;
            border: 2px solid rgb(150, 146, 146);
            border-radius: 20px;
            padding: 5px;
            height: fit-content;
            padding: 15px;
            max-width: 300px;
        }

        p {
            max-width: 300px;
        }
    </style>

    <body>
        <%- include("navbar",{loggedIn,name}) %>
            <%- include("toast",{error}) %>
                <div class="d-flex flex-column align-items-center gap-3 mt-2">
                    <div class="card p-3 w-75">
                        <form action="/notes" method="post">
                            <div class="mb-3">
                                <label for="title" class="form-label">Title</label>
                                <input type="text" class="form-control" id="title" name="title"
                                    placeholder="Enter the title of the note">
                            </div>
                            <div class="mb-3">
                                <textarea required class="form-control" id="content" name="content" rows="3"
                                    placeholder="Start writing here"></textarea>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </form>
                    </div>
                    <div class="container-fluid w-100 p-2 d-flex flex-row flex-wrap gap-5 justify-content-evenly">
                        <% for(note of notes) {%>
                            <form action="/delete" method="post" class="note">
                                <div class="d-flex justify-content-around align-items-center gap-3">
                                    <h4>
                                        <%= note.title %>
                                    </h4>
                                    <button class="btn btn-sm btn-close" name="id" value="<%= note._id %>"></button>
                                </div>
                                <input type="hidden" name="uid" value="<%= note.user_id %>">
                                <p>
                                    <%= note.content.toString().trim() %>
                                </p>
                            </form>
                            <% } %>
                    </div>
                </div>
    </body>

    </html>